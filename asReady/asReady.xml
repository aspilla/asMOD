<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/
..\Blizzard_SharedXML\UI.xsd">
	<Frame name="AREADYFrameTemplate" virtual="true" enableMouse="false" frameStrata="LOW" frameLevel="1000">
		<Layers>
			<Layer level="BACKGROUND">
				<Texture name="$parentIcon" parentKey="icon" setAllPoints="true"/>				
			</Layer>
			<Layer level="ARTWORK" textureSubLevel="7">
				<Texture name="$parentBorder" parentKey="border" file="Interface\Addons\asReady\border.tga"/>
			</Layer>
			<Layer level="OVERLAY">
				<FontString name="$parentRemain" parentKey="remain" justifyH="RIGHT"/>				
			</Layer>
		</Layers>
		<Frames>
			<Cooldown name="$parentCooldown" parentKey="cooldown" hideCountdownNumbers="true" inherits="CooldownFrameTemplate" reverse="true" hidden="true">
				<Anchors>
					<Anchor point="CENTER">
						<Offset>
							<AbsDimension x="0" y="-1"/>
						</Offset>
					</Anchor>
				</Anchors>
			</Cooldown>
		</Frames>		
	</Frame>	
	<Script file="asReady.lua"/>
</Ui>
